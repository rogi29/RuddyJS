{
  "tags": {
    "allowUnknownTags": true
  },
  "source": {
    "include": [
      "./src/core/",
      "./src/globals/",
      "./README.md"
    ]
  },
  "plugins": ["plugins/markdown"],
  "opts": {
    "encoding": "utf8",
    "template": "./node_modules/docdash",
    "destination": "./docs/",
    "recurse": true,
    "verbose": true
  },
  "markdown": {
    "parser": "gfm",
    "hardwrap": true
  },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "default": {
      "outputSourceFiles": true,
      "includeDate": false
    }
  },
  "docdash": {
    "static": false,
    "sort": true
  }
}